<form class="input-group user-auth" action=<%= users_url %> method="post">
  <h1>Sign Up</h1>

  <% if flash[:errors] %>
    <p class="errors">
      <% flash[:errors].each do |error| %>
        <%= error %> <br>
      <% end %>
    </p>
  <% end %>

  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <h3>
    <label for="username">
      Username:
      <input class="input" type="text" name=user[username] value="" id="username">
    </label>
  </h3>
  <h3>
    <label for="password">
      Password:
      <input class="input" type="password" name=user[password] value="" id="password">
    </label>
  </h3>
  <h3>
    <label for="confirm_password">
      Confirm Password:
      <input class="input" type="password" name="user[password_confirmation]" id="confirm_password" value="">
    </label>
  </h3>
  <input class="button" type="submit" name="name" value="Sign Up">
  <br>
  <p class="switch">
    <%= link_to "Already have an account? Sign in", new_session_url %>
  </p>
</form>
